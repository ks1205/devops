---
- hosts: web
  gather_facts: false

  tasks:
    - name: install httpd
      yum:  name=httpd state=installed
      become: yes
      register: temp_var
    
    - name: debugging
      debug: var=temp_var
 
    - name: Printing successfull Installation
      debug: msg='httpd installation is successfull'
      when:  temp_var.rc == 0

    - name: Printing Failure message
      debug: msg='httpd installation failed!!'
      when:  temp_var is failed     

    - name: Printing when already Installed
      debug: msg='Httpd is already installed'
      when: temp_var.change == false and temp_var.rc == 0
...
